#include <iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "");

	int number = -1;
	int count = 0;
	int sum = 0;

	cout << "статистика последовательности\n" << "введите положительные числa\n" << "введите 0 для завершения\n";
	while (number != 0) {
		cout << "введите число: ";
		if (!(cin >> number)) {
			cout << "ошибка ввода";
		}

		if (number != 0) {
			sum += number;
			count++;
		}
		
	}

	cout << "кол-во чисел: " << count << endl;
	cout << "сумма чисел: " << sum << endl;

	return 0;
}
