#include <iostream>
#include <string>
#include <io.h>
#include <fcntl.h>
using namespace std;

int main() {
	_setmode(_fileno(stdout), _O_U16TEXT);
	_setmode(_fileno(stdin), _O_U16TEXT);
	wcout << L"Главное меню:" << endl;
	wcout << L"1 - линия" << endl;
	wcout << L"2 - квадрат" << endl;
	wcout << L"3 - прямоугольник" << endl;
	wcout << L"4 - треугольник" << endl;
	wcout << L"5 - решетка" << endl;
	wcout << L"6 - крестик" << endl;
	wcout << L"Выберите фигуру: ";
	int figure;
	wcin >> figure;

	system("cls");

	if (figure == 1) { // линия
		wcout << L"фигура: линия" << endl;
		wcout << L"Размер: ";
		int size;
		wcin >> size;

		wcout << L"Текстура: ";
		wchar_t symbol;
		wcin >> symbol;
		wcout << L"результат:" << endl;
		for (int i = 0; i < size; i++) {
			wcout << symbol << " ";
		}
		wcout << endl;
	}

	else if (figure == 2) { // квадрат
		wcout << L"Фигура: квадрат" << endl;
		wcout << L"1 - заполненный" << endl;
		wcout << L"2 - пустой" << endl;
		wcout << L"Выберите тип: ";
		int type;
		wcin >> type;

		wcout << L"Размер: ";
		int size;
		wcin >> size;

		wcout << L"Текстура: ";
		wchar_t symbol;
		wcin >> symbol;

		wcout << L"Результат: " << endl;
		for (int i = 0; i < size; i++) {
			for (int j = 0; j < size; j++) {
				if (type == 1 || i == 0 || i == size - 1 || j == 0 || j == size - 1) {
					wcout << symbol << L" ";
				}
				else {
					wcout << L"  ";
				}
			}
			wcout << endl;
		}
	}

	else if (figure == 3) { // прямоугольник
		wcout << L"Фигура: прямоугольник" << endl;
		wcout << L"1 - заполненный" << endl;
		wcout << L"2 - пустой" << endl;
		wcout << L"Выберите тип: ";
		int type;
		wcin >> type;
		wcout << L"Ширина: ";
		int width;
		wcin >> width;
		wcout << L"Высота: ";
		int height;
		wcin >> height;
		wcout << L"Текстура: ";
		wchar_t symbol;
		wcin >> symbol;

		wcout << L"Результат: " << endl;
		for (int i = 0; i < height; i++) {
			for (int j = 0; j < width; j++) {
				if (type == 1 || i == 0 || i == height - 1 || j == 0 || j == width - 1) {
					wcout << symbol << L" ";
				}
				else {
					wcout << L"  ";
				}
			}
			wcout << endl;
		}

	}

	else if (figure == 4) {
		wcout << L"Фигура: прямоугольник" << endl;
		wcout << L"1 - заполненный" << endl;
		wcout << L"2 - пустой" << endl;
		wcout << L"выберите тип: ";
		int type;
		wcin >> type;
		wcout << L"размер: ";
		int size;
		wcin >> size;
		wcout << L"текстура: ";
		wchar_t symbol;
		wcin >> symbol;

		wcout << L"результат: " << endl;

		for (int i = 1; i <= size; i++) {
			for (int j = 0; j < size - i; j++) {
				wcout << L" ";
			}
			for (int j = 0; j < i; j++) {
				if (type == 1 || j == 0 || j == i - 1 || i == size) {
					wcout << symbol << L" ";
				}
				else {
					wcout << L"  ";
				}
			}
			wcout << endl;
		}
	}
	return 0;
}
