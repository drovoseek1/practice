#include <iostream>
#include <string>
#include <io.h>
#include <fcntl.h>
using namespace std;

int main() {
	_setmode(_fileno(stdout), _O_U16TEXT);
	_setmode(_fileno(stdin), _O_U16TEXT);
	wcout << L"Главное меню:" << endl;
	wcout << L"1 - линия" << endl;
	wcout << L"2 - квадрат" << endl;
	wcout << L"Выберите фигуру: ";
	int figure;
	wcin >> figure;

	system("cls");

	if (figure == 1) {
		wcout << L"фигура: линия" << endl;
		wcout << L"Размер: ";
		int size;
		wcin >> size;

		wcout << L"Текстура: ";
		wchar_t symbol;
		wcin >> symbol;
		wcout << L"результат:" << endl;
		for (int i = 0; i < size; i++) {
			wcout << symbol << " ";
		}
		wcout << endl;
	}

	else if (figure == 2) {
		wcout << L"Фигура: квадрат" << endl;
		wcout << L"1 - заполненный" << endl;
		wcout << L"2 - пустой" << endl;
		wcout << L"Выберите тип: ";
		int type;
		wcin >> type;

		wcout << L"Размер: ";
		int size;
		wcin >> size;

		wcout << L"Текстура: ";
		wchar_t symbol;
		wcin >> symbol;

		wcout << L"Результат: " << endl;
		for (int i = 0; i < size; i++) {
			for (int j = 0; j < size; j++) {
				if (type == 1 || i == 0 || i == size - 1 || j == 0 || j == size - 1) {
					wcout << symbol << L" ";
				}
				else {
					wcout << L"  ";
				}
			}
			wcout << endl;
		}
	}
	return 0;
}
